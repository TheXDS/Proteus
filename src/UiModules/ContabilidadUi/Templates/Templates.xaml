<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <HierarchicalDataTemplate x:Key="CuentaTemplate" ItemsSource="{Binding Children}">
        <TextBlock FontWeight="Bold"><Run Text="{Binding Id}" Foreground="Gray"/> - <Run Text="{Binding Name}"/></TextBlock>
    </HierarchicalDataTemplate>
    <DataTemplate x:Key="SubCuentaTemplate">
        <TextBlock><Run Text="{Binding Id}" Foreground="Gray"/> - <Run Text="{Binding Name}"/></TextBlock>
    </DataTemplate>
</ResourceDictionary>