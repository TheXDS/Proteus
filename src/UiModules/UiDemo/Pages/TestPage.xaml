<page:ProteusPage
    x:Class="TheXDS.Proteus.Pages.TestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:page="http://schemas.thexds.com/2019/Proteus/page">
    <Viewbox Margin="50">
        <StackPanel VerticalAlignment="Center" MinWidth="250">
            <TextBlock Text="{Binding Title, Mode=OneWay}" Style="{DynamicResource Title}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Separator Margin="0,10"/>
            <TextBlock Text="{Binding Entity, Mode=OneWay}"/>
            <Separator Margin="0,10"/>
            <TextBlock>Desde el Entity:</TextBlock>
            <TextBlock>
                Nombre: <Run Text="{Binding Entity.Name}"/>
            </TextBlock>
            <TextBlock>
                Edad: <Run Text="{Binding Entity.Age}"/>
            </TextBlock>
            <Separator Margin="0,10"/>
            <TextBlock>Control editable</TextBlock>
            <TextBox Text="{Binding Entity.Name}"/>
            <Button Margin="0,10,0,0" Command="{Binding FlipCommand, Mode=OneWay}">Flip!</Button>
            <Button Margin="0,10,0,0" Command="{Binding DoCloseCommand, Mode=OneWay}">Cerrar desde ViewModel</Button>
        </StackPanel>
    </Viewbox>
</page:ProteusPage>